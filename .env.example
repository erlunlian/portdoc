# Root environment variables
# Copy this to .env and fill in the values

# Database (Postgres with pgvector)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:54322/postgres

# Supabase (local or hosted)
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# LLM Configuration
# Set LLM_PROVIDER to "azure" for Azure OpenAI or "openai" for standard OpenAI
LLM_PROVIDER=azure

# Azure OpenAI
LLM_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Standard OpenAI (if LLM_PROVIDER=openai)
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4-turbo-preview

# Embeddings Configuration
# Azure OpenAI Embeddings
EMBEDDING_API_KEY=your-azure-openai-api-key
AZURE_EMBEDDING_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_EMBEDDING_API_VERSION=2024-02-15-preview
AZURE_EMBEDDING_DEPLOYMENT_NAME=text-embedding-ada-002

# Standard OpenAI Embeddings (if LLM_PROVIDER=openai)
EMBEDDING_BASE_URL=https://api.openai.com/v1
EMBEDDING_MODEL=text-embedding-3-small

# Storage
STORAGE_BUCKET=pdfs

